<Window x:Class="ConvertToAudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:custom="clr-namespace:ConvertToAudio"
        Title="Convert to Audio" Height="350" Width="500" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel Margin="3">
            <StackPanel Orientation="Horizontal">
                <Label Content="File:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBox x:Name="tb_SourceFile" VerticalAlignment="Center" Width="370" HorizontalAlignment="Center" LostFocus="tb_SourceFile_LostFocus"/>
                <Button x:Name="btn_BrowseFiles" Content="Browse" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Click="btn_BrowseFiles_Click" Margin="3,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Start:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <custom:TimeInput/>
                <Label Content="Duration:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                
                <Button x:Name="btn_Convert" Content="Convert" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Click="btn_Convert_Click"/>
            </StackPanel>
                <TextBox x:Name="tb_Log" TextWrapping="Wrap" Height="260"/>
        </StackPanel>
    </Grid>
</Window>
